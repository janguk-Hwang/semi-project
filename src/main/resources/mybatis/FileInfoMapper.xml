<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.FileInfoMapper">
    <select id="selectProductDetailImg" parameterType="int" resultType="FileinfoDto">
        select file_id, originfilename, savefilename, ref_type, ref_id, file_role from fileinfo where ref_type='product'
        and ref_id=#{product_id} and file_role='DETAIL'
    </select>

    <insert id="imginsert" parameterType="FileinfoDto">
        insert into fileinfo values(seq_fileinfo.nextval,#{originfilename},#{savefilename},#{ref_type},#{ref_id},#{file_role})
    </insert>

</mapper>