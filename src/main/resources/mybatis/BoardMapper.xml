<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.BoardMapper">

    <select id="selectAll" parameterType="map" resultType="BoardDto">
        select * from
        (
        select m.*, row_number() over(order by board_id desc) rnum
        from board m
        <include refid="search"/>
        )
        <![CDATA[
        where rnum >= #{startRow} and rnum <= #{endRow}
        ]]>
    </select>

    <sql id="search">
        <where>
        <if test="field != null and field != ''  and keyword != null">
             ${field} like '%' || #{keyword} || '%'
        </if>
        </where>
    </sql>
    <select id="count" resultType="int" parameterType="map">
        select NVL(count(*),0) cnt from board
        <include refid="search"/>
    </select>

    <select id="detail" parameterType="int" resultType="BoardDto">
        select * from board where board_id=#{value}
    </select>

    <select id="prev" parameterType="int" resultType="BoardDto">
        select * from
        (
        select * from board
        <![CDATA[where board_id<#{value}]]>
        order by board_id desc
        ) where rownum=1
    </select>
    <select id="next" parameterType="int" resultType="BoardDto">
        select * from
        (
        select * from board
        <![CDATA[where board_id>#{value}]]>
        order by board_id asc
        ) where rownum=1
    </select>

</mapper>